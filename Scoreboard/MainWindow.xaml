                    <Button Style="{StaticResource StandardButton}" Name="btnSaveSettings" Width="100" Height="32" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="16" Content="Save settings" FontSize="14" VerticalContentAlignment="Center" Click="SaveSettings" Cursor="Hand" />

                    <Label Name="lbTheme" Content="Theme" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16 80" FontSize="14" Padding="0" VerticalContentAlignment="Center" FontWeight="Bold"/>
                    <ComboBox Name="cbThemes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="264" Height="24" FontSize="14" Margin="16 104" SelectionChanged="cbThemes_SelectionChanged" Cursor="Hand" />
                </Grid>
            </TabItem>
        </TabControl>
        <Label HorizontalAlignment="Right" VerticalAlignment="Bottom" FontStyle="Italic" FontFamily="Calibri" FontSize="13" Margin="4 0">
            <Hyperlink NavigateUri="http://jmmdev.github.io" RequestNavigate="Hyperlink_RequestNavigate" Foreground="{DynamicResource LinkColor}">
                jmmdev.github.io
            </Hyperlink>
        </Label>
    </Grid>
</Window>
